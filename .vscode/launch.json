{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Pages",
      "request": "launch",
      "type": "node-terminal",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}/packages/pages"
    },
    {
      "name": "Preview Pages",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:4321"
    },
    {
      "name": "Run Script",
      "request": "launch",
      "type": "node-terminal",
      "command": "npm run serve",
      "cwd": "${workspaceFolder}/packages/script"
    },
    {
      "name": "Preview Script",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:9000"
    }
  ]
}