{
  "name": "mentionads",
  "version": "1.0.1",
  "license": "PolyForm-Shield-1.0.0",
  "scripts": {
    "lint": "eslint",
    "build": "esbuild src/script.ts --sourcemap --bundle --outdir=out",
    "watch": "esbuild src/script.ts --sourcemap --bundle --outdir=out --watch",
    "minify": "esbuild out/script.js --minify --sourcemap --outfile=out/script.min.js",
    "serve": "cp test/*.html out/ && esbuild src/script.ts --sourcemap --bundle --outdir=out --servedir=out --serve=9000"
  },
  "dependencies": {
    "@playwright/test": "^1.45.3",
    "@types/node": "^22.10.1",
    "esbuild": "^0.23.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.16.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mentionads/frontend.git"
  }
}