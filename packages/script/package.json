{
  "name": "@mentionads/script",
  "version": "1.0.4",
  "license": "PolyForm-Shield-1.0.0",
  "scripts": {
    "lint": "eslint",
    "build": "esbuild src/script.ts --sourcemap --bundle --outdir=out",
    "watch": "esbuild src/script.ts --sourcemap --bundle --outdir=out --watch",
    "minify": "esbuild out/script.js --minify --sourcemap --outfile=out/script.min.js",
    "serve": "mkdir -p out && cp test/*.html out && esbuild src/script.ts --sourcemap --bundle --outdir=out --servedir=out --serve=9000"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.1",
    "@types/node": "^22.13.1",
    "esbuild": "^0.25.0",
    "eslint": "^9.20.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.30.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mentionads/frontend.git"
  }
}