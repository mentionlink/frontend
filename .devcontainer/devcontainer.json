{
  "name": "TypeScript & Node",
  "build": {
    "dockerfile": "./Dockerfile"
  },
  "customizations": {
    "codespaces": {
      "openFiles": [
        "packages/pages/astro.config.mjs"
      ]
    },
    "vscode": {
      "extensions": [
        "astro-build.astro-vscode",
        "github.copilot",
        "github.copilot-chat"
      ]
    }
  },
  "portsAttributes": {
    "4321": {
      "label": "Pages Preview",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [
    4321
  ],
  "postCreateCommand": "cd packages/pages && npm ci && npm run build",
  "waitFor": "postCreateCommand",
  "postAttachCommand": {
    "Server": "npm run dev"
  }
}