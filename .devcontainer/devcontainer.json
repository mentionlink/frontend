{
  "name": "Mention Ads DevContainer",
  "build": {
    "dockerfile": "./Dockerfile"
  },
  "customizations": {
    "codespaces": {
      "openFiles": [
        "packages/pages/astro.config.mjs"
      ]
    },
    "vscode": {
      "extensions": [
        "astro-build.astro-vscode",
        "ms-azuretools.vscode-docker",
        "github.copilot",
        "github.copilot-chat"
      ]
    }
  },
  "portsAttributes": {
    "4321": {
      "label": "Pages Preview",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [
    4321
  ],
  "postCreateCommand": ".devcontainer/setup.sh",
  "waitFor": "postCreateCommand",
  "postAttachCommand": {
    "pages": "cd packages/pages && npm run dev",
    "script": "cd packages/script && npm run watch"
  }
}